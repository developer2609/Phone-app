<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddPhoneActivity">

    <EditText
        android:id="@+id/phone_nomi"
        android:layout_width="match_parent"
        android:background="#E5F96F"
        app:layout_constraintVertical_weight="0.3"
        android:gravity="center"
        android:layout_height="0dp"
        android:hint="Add phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edt_name"
        />


    <TextView
        android:id="@+id/edt_name"
        android:hint="Phone name"
        style="@style/Edit_style1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintTop_toBottomOf="@id/phone_nomi"
        app:layout_constraintBottom_toTopOf="@id/phone_features"
        />
    <TextView
        app:layout_constraintVertical_weight="2.5"
        android:id="@+id/phone_features"
        style="@style/Edit_style1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        android:hint="Phone features"
        app:layout_constraintTop_toBottomOf="@id/edt_name"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phone_features"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        style="@style/btn_phone"/>








</androidx.constraintlayout.widget.ConstraintLayout>